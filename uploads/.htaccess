# Bảo mật thư mục uploads
# Chỉ cho phép download file, không cho phép thực thi PHP

# Tắt thực thi PHP scripts
php_flag engine off

# Chỉ cho phép các file type an toàn
<FilesMatch "\.(pdf|doc|docx|xls|xlsx|ppt|pptx|txt|jpg|jpeg|png|zip|rar)$">
    # Cho phép truy cập các file này
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Từ chối truy cập các file khác
<FilesMatch "^.*$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Cho phép lại các file type an toàn (override rule ở trên)
<FilesMatch "\.(pdf|doc|docx|xls|xlsx|ppt|pptx|txt|jpg|jpeg|png|zip|rar)$">
    Order Allow,Deny
    Allow from all
</FilesMatch> 